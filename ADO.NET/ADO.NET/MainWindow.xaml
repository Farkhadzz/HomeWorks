<Window x:Class="ADO.NET.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ADO.NET"
        mc:Ignorable="d"
        Title="ADO.NET" Height="450" Width="800">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0">
            
            <Button Click="All_Students_Click" Height="40" Width="105" Margin="10" Content="Show All Students"/>
            <Button Click="Max_Click" Height="40" Width="105" Margin="10" Content="Show Max"/>
            <Button Click="Min_Click" Height="40" Width="105" Margin="10" Content="Show Max"/>

            <TextBox x:Name="Query" VerticalContentAlignment="Center" Height="50" Width="140" VerticalAlignment="Center" />
            <Button Click="Enter_Click" Height="30" Width="35" Margin="10" Content="Enter" />

        </StackPanel>

        <TextBlock x:Name="Results" Grid.Row="1"/>

    </Grid>
</Window>
